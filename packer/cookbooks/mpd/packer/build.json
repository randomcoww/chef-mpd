{
  "builders": [
    {
      "type": "docker",
      "image": "phusion/baseimage:latest",
      "commit": "true",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/sbin/my_init", "--", "bash", "-l"]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get install -y curl vim git"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "run_list": ["mpd::docker"],
      "staging_directory": "/etc/chef"
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "randomcoww/mpd",
      "tag": "0.4.1"
    }
  ]
}
